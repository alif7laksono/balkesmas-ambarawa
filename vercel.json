{
  "framework": "nextjs",
  "buildCommand": "npm run build",
  "outputDirectory": ".next",

  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=0, must-revalidate"
        },
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        }
      ]
    },
    {
      "source": "/(.*\\.(jpg|jpeg|png|webp|avif))",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ],

  "rewrites": [
    {
      "source": "/berita/:slug*",
      "destination": "/berita/[slug]"
    }
  ],

  "redirects": [
    {
      "source": "/admin",
      "destination": "/admin/berita",
      "permanent": false
    }
  ],

  "cleanUrls": true,
  "trailingSlash": false
}
